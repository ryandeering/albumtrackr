<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/edit_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:textLocale="@string/edit_artist"
        android:hint="@string/edit_artist" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_artist"
        app:textLocale="@string/edit_name"
        android:layout_alignParentStart="true"
        android:hint="@string/edit_name" />

    <TextView
        android:id="@+id/add_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Album"
        android:visibility="invisible" />

</RelativeLayout>